#!/bin/bash

usage() {
  echo "Usage: $(basename "$0") [-h] [-l] [-a] [-c path] [artifact_name [version]]"
  echo "Get the path to the artifact."
  echo "  -h:  Show this help message"
  echo "without artifact_name:"
  echo "  prints the root path of artifacts"
  echo "with artifact_name given:"
  echo "       prints the root path of the artifact"
  echo "  -a:  List path to all versions of artifact"
  echo "  -l:  List path to latest version of artifact"
  echo "with artifact_name and version given:"
  echo "       prints the path to the specified version of the artifact"
  echo "  -c:  copy the artifact to the specified path (uses with -l and version options)"
}

list_all=false
list_latest=false
copy_path=
while getopts "halc:" arg; do
  case $arg in
  h)
    usage
    exit 0
    ;;
  a)
    list_all=true
    ;;
  l)
    list_latest=true
    ;;
  c)
    copy_path=$OPTARG
    ;;
  *)
    usage
    exit 1
    ;;
  esac
done
shift $((OPTIND - 1))

if [[ $# -ne 0 ]] && [[ $# -ne 1 ]] && [[ $# -ne 2 ]]; then
  usage
  exit 0
fi

if [[ $# -eq 0 ]]; then
  if [[ $list_all == true || $list_latest == true ]]; then
    echo "Error: Cannot use -a or -l options without specifying artifact_name."
    exit 1
  fi
elif [[ $# -eq 1 ]]; then
  if [[ $list_all == true && $list_latest == true ]]; then
    echo "Error: Cannot use both -a and -l options together."
    exit 1
  fi
elif [[ $# -eq 2 ]]; then
  if [[ $list_all == true || $list_latest == true ]]; then
    echo "Error: Cannot use -a or -l options with specific version."
    exit 1
  fi
fi
if [[ -n $copy_path ]]; then
  if [[ $# -ne 2 && $list_latest == false ]]; then
    echo "Error: -c option must be used with artifact_name and version or -l option."
    exit 1
  fi
fi

readonly artifact_name=$1
root=$(ore-config '.artifacts.home')

if [[ $# -eq 0 ]]; then
  echo "$root"
elif [[ $# -eq 1 ]]; then

  if [[ $list_all == true ]]; then
    find "$root/$artifact_name" -type f | sort -V
  elif [[ $list_latest == true ]]; then
    if [[ -z $copy_path ]]; then
      find "$root/$artifact_name" -type f | sort -V | tail -n 1
    else
      latest_path=$(find "$root/$artifact_name" -type f | sort -V | tail -n 1)
      cp -v "$latest_path" "$copy_path"
    fi
  else
    echo "$root/$artifact_name"
  fi

elif [[ $# -eq 2 ]]; then
  readonly version=$2
  readonly versionTemplate="${version}"
  grep_regex=${versionTemplate//\$\{version\}/$version}

  if [[ -z $copy_path ]]; then
    find "$root/$artifact_name" -type f | grep "$grep_regex"
  else
    version_path=$(find "$root/$artifact_name" -type f | grep "$grep_regex")
    cp -v "$version_path" "$copy_path"
  fi
fi
